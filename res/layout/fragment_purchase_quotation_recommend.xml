<?xml version="1.0" encoding="utf-8"?>
<com.micen.suppliers.widget.product.ResizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/quotation_recommend_ll"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/quotation_recommend_tipLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/quotation_recommend_tipTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_fffaee"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_ffdb7b" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/quotation_recommend_scrollScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/paddingleftandright"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/color_f2f2f2" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/product_info"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/quotation_recommend_chooseTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/choose_from_room"
                        android:textColor="@color/color_0088F0"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e0e0e0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/quotation_recommend_title_nameTextView"
                        style="@style/purchase_quotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_name" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/quotation_recommend_title_nameTextView"
                        android:background="@color/color_e0e0e0" />

                    <TextView
                        android:id="@+id/quotation_recommend_title_uintpriceTextView"
                        style="@style/purchase_quotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_nameTextView"
                        android:layout_marginTop="1dp"
                        android:text="@string/unit_price" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/quotation_recommend_title_uintpriceTextView"
                        android:background="@color/color_e0e0e0" />

                    <TextView
                        android:id="@+id/quotation_recommend_title_quanityTextView"
                        style="@style/purchase_quotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_uintpriceTextView"
                        android:layout_marginTop="1dp"
                        android:text="@string/minimum_order_quantity" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/quotation_recommend_title_quanityTextView"
                        android:background="@color/color_e0e0e0" />

                    <TextView
                        android:id="@+id/quotation_recommend_title_dayTextView"
                        style="@style/purchase_quotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_quanityTextView"
                        android:layout_marginTop="1dp"
                        android:text="@string/delivery_time" />

                    <EditText
                        android:id="@+id/quotation_recommend_nameEditText"
                        style="@style/purchase_quotation_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView"
                        android:inputType="text"
                        android:maxLength="160" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_nameTextView"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/quotation_recommend_uintpriceEditText"
                            style="@style/purchase_quotation_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:maxLength="20" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_e0e0e0" />

                        <TextView
                            android:id="@+id/quotation_recommend_currencyTextView"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/unit_dollar" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_e0e0e0" />

                        <TextView
                            android:id="@+id/quotation_recommend_unitTextView"
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:drawableRight="@drawable/ic_purchase_down"
                            android:gravity="center"
                            android:text="@string/unit_ge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_uintpriceTextView"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/quotation_recommend_quanityEditText"
                            style="@style/purchase_quotation_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:maxLength="50" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_e0e0e0" />

                        <TextView
                            android:id="@+id/quotation_recommend_quanityTextView"
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:drawableRight="@drawable/ic_purchase_down"
                            android:gravity="center"
                            android:text="@string/unit_ge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_quanityTextView"
                        android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/quotation_recommend_dayEditText"
                            style="@style/purchase_quotation_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="3" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_e0e0e0" />

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:text="@string/unit_day" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e0e0e0" />

                <LinearLayout
                    android:id="@+id/quotation_recommend_additionalLinearLayout"
                    style="@style/paddingleftandright"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/color_f2f2f2" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/additional_conditions_optional"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/quotation_recommend_additionalCheckBox"
                        style="@style/purchase_rfq_indicator"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/quotation_recommend_additionalcontentRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_e0e0e0" />

                    <TextView
                        android:id="@+id/quotation_recommend_title_remarkTextView"
                        style="@style/purchase_quotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:minEms="5"
                        android:text="@string/remark" />

                    <EditText
                        android:id="@+id/quotation_recommend_remarkEditText"
                        style="@style/purchase_quotation_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_toRightOf="@id/quotation_recommend_title_remarkTextView"
                        android:gravity="top"
                        android:hint="@string/max2000"
                        android:inputType="textMultiLine"
                        android:maxLength="2000"
                        android:scrollbars="vertical" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/quotation_recommend_remarkEditText"
                        android:background="@color/color_e0e0e0" />

                    <RelativeLayout
                        android:id="@+id/quotation_recommend_title_imgRelativeLayout"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@id/quotation_recommend_remarkEditText"
                        android:layout_marginBottom="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp" >

                        <ImageView
                            android:id="@+id/quotation_recommend_imgImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:contentDescription="@string/product_image"
                            android:src="@drawable/ic_purchase_quotation_capture_add" />

                        <ImageView
                            android:id="@+id/quotation_recommend_imgdelImageView"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="@string/product_image"
                            android:src="@drawable/ic_purchase_quotation_capture_delete"
                            android:visibility="gone" >
                        </ImageView>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/quotation_recommend_title_imgRelativeLayout"
                        android:background="@color/color_e0e0e0" />

                    <TextView
                        android:id="@+id/quotation_recommend_title_paymentTextView"
                        style="@style/purchase_quotation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_imgRelativeLayout"
                        android:layout_marginTop="1dp"
                        android:text="@string/payment" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/quotation_recommend_title_paymentTextView"
                        android:background="@color/color_e0e0e0" />

                    <EditText
                        android:id="@+id/quotation_recommend_paymentEditText"
                        style="@style/purchase_quotation_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_imgRelativeLayout"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@id/quotation_recommend_title_paymentTextView"
                        android:hint="@string/pleasechoose"
                        android:inputType="text"
                        android:maxLength="50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quotation_recommend_title_paymentTextView"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/quotation_recommend_title_mode_of_transportationTextView"
                            style="@style/purchase_quotation_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mode_of_transportation" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_e0e0e0" />

                        <EditText
                            android:id="@+id/quotation_recommend_shipmenttypeEditTex"
                            style="@style/purchase_quotation_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/pleasechoose"
                            android:paddingLeft="15dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_e0e0e0" />

                        <EditText
                            android:id="@+id/quotation_recommend_portnameEditText"
                            style="@style/purchase_quotation_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/portname_fob"
                            android:inputType="text"
                            android:maxLength="50"
                            android:paddingLeft="15dp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/color_e0e0e0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:id="@+id/sv_recommend_quotation_ll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/color_e0e0e0" />

                        <TextView
                            android:id="@+id/sv_recommend_quotation_preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_quote_now_btn"
                            android:gravity="center"
                            android:paddingTop="-0.5dp"
                            android:text="@string/preview"
                            android:textColor="@color/color_0088F0"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/sv_recommend_quotation_send"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_quote_now_btn_blue"
                        android:gravity="center"
                        android:text="@string/send_immediately"
                        android:textColor="@color/color_ffffff"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_quotation_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_e0e0e0" />

            <TextView
                android:id="@+id/recommend_quotation_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_quote_now_btn"
                android:gravity="center"
                android:paddingTop="-0.5dp"
                android:text="@string/preview"
                android:textColor="@color/color_0088F0"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/recommend_quotation_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_quote_now_btn_blue"
            android:gravity="center"
            android:text="@string/send_immediately"
            android:textColor="@color/color_ffffff"
            android:textSize="17sp" />
    </LinearLayout>

</com.micen.suppliers.widget.product.ResizeLinearLayout>