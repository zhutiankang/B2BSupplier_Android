<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/mbr_identify"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_behaviour_receive"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mbr_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mbr_identify"
            android:layout_marginTop="10dp"
            android:paddingRight="3dp"
            android:text="2015-03-30"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:background="@color/color_e0e0e0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mbr_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/mbr_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/mbr_attachment"
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_message_lv_item_attachment"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mbr_sender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_999999"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>