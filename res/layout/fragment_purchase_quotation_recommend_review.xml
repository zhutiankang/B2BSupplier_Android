<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:page="http://schemas.android.com/apk/res/com.micen.suppliers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <com.micen.suppliers.view.PageStatusView
        android:id="@+id/broadcast_page_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        page:pageStatusLogo="@drawable/ic_data_empty"
        page:pageStatusText="@string/no_related_data" />

    <com.micen.suppliers.view.SearchListProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/paddingleftandright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/quotation_recommend_imgImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/product_image" />

                <TextView
                    android:id="@+id/quotation_recommend_nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/product_info"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/quotation_recommend_title_uintpriceTextView"
                    style="@style/purchase_quotation_preview_nametextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_price" />

                <TextView
                    android:id="@+id/quotation_recommend_title_quanityTextView"
                    style="@style/purchase_quotation_preview_nametextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quotation_recommend_title_uintpriceTextView"
                    android:text="@string/minimum_order_quantity" />

                <TextView
                    android:id="@+id/quotation_recommend_title_dayTextView"
                    style="@style/purchase_quotation_preview_nametextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quotation_recommend_title_quanityTextView"
                    android:layout_marginTop="1dp"
                    android:text="@string/delivery_time" />

                <TextView
                    android:id="@+id/quotation_recommend_uintpriceTextView"
                    style="@style/purchase_quotation_preview_valuetextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView" />

                <TextView
                    android:id="@+id/quotation_recommend_quanityTextView"
                    style="@style/purchase_quotation_preview_valuetextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quotation_recommend_title_uintpriceTextView"
                    android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView" />

                <TextView
                    android:id="@+id/quotation_recommend_dayTextView"
                    style="@style/purchase_quotation_preview_valuetextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quotation_recommend_title_quanityTextView"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/quotation_recommend_title_quanityTextView" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/quotation_recommend_additionalcontentLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e0e0e0" />

                <TextView
                    android:id="@+id/quotation_recommend_title_additionalTextView"
                    style="@style/purchase_quotation_preview_valuetextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/additional_conditions" />

                <LinearLayout
                    android:id="@+id/quotation_recommend_remarkLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/purchase_quotation_preview_nametextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="@string/remark" />

                    <TextView
                        android:id="@+id/quotation_recommend_remarkTextView"
                        style="@style/purchase_quotation_preview_valuetextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quotation_recommend_paymentLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/purchase_quotation_preview_nametextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="@string/payment" />

                    <TextView
                        android:id="@+id/quotation_recommend_paymentTextView"
                        style="@style/purchase_quotation_preview_valuetextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quotation_recommend_mode_of_transportationLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/purchase_quotation_preview_nametextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="@string/mode_of_transportation" />

                    <TextView
                        android:id="@+id/quotation_recommend_mode_of_transportationTextView"
                        style="@style/purchase_quotation_preview_valuetextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>