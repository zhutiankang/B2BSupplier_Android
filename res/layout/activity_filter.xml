<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:id="@+id/filter_header_button_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/color_0088F0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/filter_header_btn1_TextView"
            style="@style/purchase_tab_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/filter_header_btn2_TextView"
            style="@style/purchase_tab_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/filter_header_btn3_TextView"
            style="@style/purchase_tab_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <com.focustech.common.widget.viewpagerindictor.UnderlinePageIndicator
        android:id="@+id/filter_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_indicator_line_height"
        android:background="@color/color_0088F0"
        android:orientation="horizontal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/filter_containViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <Button
            android:id="@+id/filter_resetButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_quote_now_btn"
            android:text="@string/reset"
            android:textColor="@color/color_0088F0"
            android:textSize="17sp" />

        <Button
            android:id="@+id/filter_okButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_quote_now_btn"
            android:text="@string/ok"
            android:textColor="@color/color_0088F0"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>