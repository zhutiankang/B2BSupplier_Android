<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="@string/md_behavior_record_xml_recent_year"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mbr_behaviour_tv_year_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="第0次给我发询盘"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_e0e0e0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="@string/md_behavior_record_xml_recent_week"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mbr_behaviour_tv_week_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="针对0家同行发送了0封询盘"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_e0e0e0" />

        <LinearLayout
            android:id="@+id/mbr_behaviour_season_message_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="13dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="@string/md_behavior_record_xml_recent_season"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mbr_behaviour_tv_season_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_behavior_arrows_down"
                android:paddingRight="15dp"
                android:text="向供应商累计发送0封询盘"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e0e0e0" />
        <!-- behaviour key -->

        <LinearLayout
            android:id="@+id/mbr_behaviour_key_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f8f8f8"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/mbr_behaviour_key_ll_sourcing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/md_behavior_record_xml_rfq"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp" />

                <ListView
                    android:id="@+id/mbr_behaviour_key_lv_sourcing_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:listSelector="@drawable/bg_list_selector_light_gray"
                    android:scrollbars="none"
                    android:textColor="#0088F0" />
            </LinearLayout>

            <View
                android:id="@+id/mbr_behaviour_key_ll_search_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_e0e0e0" />

            <LinearLayout
                android:id="@+id/mbr_behaviour_key_ll_search_keyword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/md_behavior_record_xml_search_key"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mbr_behaviour_key_tv_search_keyword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/mbr_behaviour_key_ll_catalogue_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_e0e0e0" />

            <LinearLayout
                android:id="@+id/mbr_behaviour_key_ll_catalogue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/md_behavior_record_xml_visit_catalogue"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mbr_behaviour_key_tv_catalogue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_e0e0e0" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>