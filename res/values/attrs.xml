<resources>

    <!-- FloatLayout -->
    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0" />
            <enum name="rtl" value="1" />
        </attr>
        <attr name="debugDraw" format="boolean" />
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean" />
        <attr name="layout_weight" format="float" />
        <attr name="android:layout_gravity" />
    </declare-styleable>
    <declare-styleable name="PullToNextLayout">
        <attr name="underLayoutColor" format="color" />
    </declare-styleable>
    <declare-styleable name="PageStatusView">
        <attr name="pageStatusLogo" format="reference" />
        <attr name="pageStatusText" format="string" />
        <attr name="pageStatusLinkText" format="string" />
        <attr name="pageStatusLinkTextImg" format="reference" />
        <attr name="pageStatusLinkTextprefixion" format="string" />
        <attr name="pageStatusLinkTextsuffix" format="string" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

</resources>