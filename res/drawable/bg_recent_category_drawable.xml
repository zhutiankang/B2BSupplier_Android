<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_window_focused="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_ffffff"></solid>

            <corners android:radius="4dp" />

            <stroke android:width="0.5dp" android:color="@color/color_d2d2d2" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape></item>
    <item android:state_enabled="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_ffffff"></solid>

            <corners android:radius="4dp" />

            <stroke android:width="0.5dp" android:color="@color/color_d2d2d2" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape></item>
    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_f7f7f7"></solid>

            <corners android:radius="4dp" />

            <stroke android:width="0.5dp" android:color="@color/color_d2d2d2" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_ffffff"></solid>

            <corners android:radius="4dp" />

            <stroke android:width="0.5dp" android:color="@color/color_d2d2d2" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape></item>

</selector>